<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css?family=Courgette" rel="stylesheet">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <!--NavBar-->
    <nav id="menu" class="navbar navbar-expand-sm fixed-top colorNormal">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link texColor" href="@Url.Action("Index", "Home", new { })">Home</a>
            </li>
            <li class="nav-item">
                <a class="nav-link texColor" href="@Url.Action("About", "Home", new { })">About</a>
            </li>
            <li class="nav-item">
                <a class="nav-link texColor" href="@Url.Action("Contact", "Home", new { })">Contact</a>
            </li>
        </ul>
        @*@Html.Partial("_LoginPartial")*@
    </nav>
    <!--NavBar-->
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/navBarjs.js"></script>
    <link href="~/Content/css/navBarcss.css" rel="stylesheet" />
    @RenderSection("scripts", required: false)
</body>
</html>
